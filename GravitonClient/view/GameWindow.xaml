<Window x:Class="GravitonClient.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GravitonClient"
        mc:Ignorable="d"
        Title="GameWindow" WindowState="Maximized" Background="#000020">
    <Canvas x:Name="DrawCanvas">
        <TextBlock Canvas.Right="75" Canvas.Top="10" Canvas.ZIndex="1000" Text="Score: 0" FontFamily="{StaticResource Azonix}" Foreground="Aqua" FontSize="20"/>
    </Canvas>
</Window>
